@model IEnumerable<Assignments.Models.Assign2.Employee>

@using Assignments.Models.Assign2;

@{
    ViewBag.Title = "Employees List";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@section featured
{
    <!--List group to display employees list-->
    <div class="container">
        <h4>Employees List using (Entity Framework)</h4>
        <ul class="list-group">
            <a href="#" class="list-group-item active">Employees Name</a>
            @foreach (Employee employee in Model)
            {                     
                <li class="list-group-item list-group-item-action">@Html.ActionLink(employee.Name, "Details", new { id = employee.EmployeeId })</li>
            }
        </ul>
    </div>
}
