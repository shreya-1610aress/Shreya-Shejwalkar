@model Assignments.Models.Assign1.GuestResponse

@{
    ViewBag.Title = "Thanks";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>
    <!--RSVP Confirmation-->
    <div class="container">
        <div class="Greeting">
            <div class="jumbotron">
                <div class="display-4">
                    Thank you, @Model.Name!
                </div>
                <div class="lead">
                    @if (Model.WillAttend == true)
                    {
                        @:It's great that you're coming. The drinks are already in the fridge!
                    }
                    else
                    {
                        @:Sorry to hear that you can't make it, but thanks for letting us know.
                    }
                </div>
              
                    @Html.ActionLink("Home", "Index", new object { }, new { @class = "btn btn-info" })
               
            </div>
        </div>
    </div>
</body>
</html>
